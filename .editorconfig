# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
charset = utf-8

[*.elm]
indent_size = 4

[*.ex]
indent_size = 2

[*.exs]
indent_size = 2

[{!*.md,!*.markdown}]
trim_trailing_whitespace = true
